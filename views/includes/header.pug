header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
  .header__logo
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
    if (user)
      button.nav__el.nav__el--logout Log out
      a.nav__el(href="/me") 
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        - const firstName = user.name.split(" ")[0];
        span= firstName
    else
      a.nav__el(href="/auth/login") Log in
      a.nav__el.nav__el--cta(href="/auth/signup") Sign up